<%= form_for @recipe do |f| %>
  Title: <%= f.text_field :title %>

  <%= f.fields_for :ingredients do |ingredient| %>
    Name: <%= ingredient.text_field :name %><br>
    Quantity: <%= ingredient.text_field :quantity %><br>
  <% end %>
  <%= link_to 'add ingredient', @recipe %><br>

  <%= f.submit %>
<% end %>
